{
  "name": "k8s-dev-environments",
  "displayName": "K8s Dev Environments",
  "description": "VS Code extension to develop with K8S environments by KDE-cli.",
  "version": "0.0.4",
  "repository": {
    "type": "git",
    "url": "https://github.com/r82wei/KDE-cli.git"
  },
  "publisher": "kde-cli",
  "engines": {
    "vscode": "^1.70.0"
  },
  "main": "./extension.js",
  "activationEvents": [
    "onView:kdeEnvView",
    "onCommand:kde.addEnv",
    "onCommand:kde.refresh",
    "onCommand:kde.createEnv",
    "onCommand:kde.stopEnv",
    "onCommand:kde.k9s",
    "onCommand:kde.headlamp",
    "onCommand:kde.expose",
    "onCommand:kde.createProject",
    "onCommand:kde.project.deploy",
    "onCommand:kde.project.undeploy",
    "onCommand:kde.project.redeploy",
    "onCommand:kde.project.exec-develop-env",
    "onCommand:kde.project.exec-deploy-env",
    "onCommand:kde.project.telepresenceReplace",
    "onCommand:kde.pod.logs",
    "onCommand:kde.pod.portForward",
    "onCommand:kde.pod.exec"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kde",
          "title": "KDE",
          "icon": "media/kde.svg"
        }
      ]
    },
    "views": {
      "kde": [
        {
          "id": "kdeEnvView",
          "name": "K8s Dev Environments"
        }
      ]
    },
    "commands": [
      {
        "command": "kde.addEnv",
        "title": "Add",
        "icon": "$(add)"
      },
      {
        "command": "kde.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "kde.createEnv",
        "title": "Create",
        "icon": "$(debug-start)"
      },
      {
        "command": "kde.stopEnv",
        "title": "Stop",
        "icon": "$(debug-stop)"
      },
      {
        "command": "kde.createProject",
        "title": "Create Project",
        "icon": "$(add)"
      },
      {
        "command": "kde.k9s",
        "title": "K9s",
        "icon": "$(dashboard)"
      },
      {
        "command": "kde.headlamp",
        "title": "Headlamp",
        "icon": "$(globe)"
      },
      {
        "command": "kde.expose",
        "title": "Port Forward",
        "icon": "$(radio-tower)"
      },
      {
        "command": "kde.project.deploy",
        "title": "Deploy",
        "icon": "$(debug-start)"
      },
      {
        "command": "kde.project.undeploy",
        "title": "Undeploy",
        "icon": "$(debug-stop)"
      },
      {
        "command": "kde.project.redeploy",
        "title": "Redeploy",
        "icon": "$(debug-restart)"
      },
      {
        "command": "kde.project.exec-develop-env",
        "title": "Develop Env",
        "icon": "$(terminal)"
      },
      {
        "command": "kde.project.exec-deploy-env",
        "title": "Deploy Env",
        "icon": "$(terminal)"
      },
      {
        "command": "kde.project.telepresenceReplace",
        "title": "Telepresence Replace",
        "icon": "$(sync)"
      },
      {
        "command": "kde.pod.logs",
        "title": "Logs",
        "icon": "$(debug-line-by-line)"
      },
      {
        "command": "kde.pod.portForward",
        "title": "Port Forward",
        "icon": "$(radio-tower)"
      },
      {
        "command": "kde.pod.exec",
        "title": "Exec",
        "icon": "$(terminal)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "kde.addEnv",
          "when": "view == kdeEnvView",
          "group": "navigation@1"
        },
        {
          "command": "kde.refresh",
          "when": "view == kdeEnvView",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "kde.createEnv",
          "when": "view == kdeEnvView && viewItem == environment",
          "group": "inline@1"
        },
        {
          "command": "kde.stopEnv",
          "when": "view == kdeEnvView && viewItem == environment",
          "group": "inline@2"
        },
        {
          "command": "kde.k9s",
          "when": "view == kdeEnvView && viewItem == environment",
          "group": "inline@3"
        },
        {
          "command": "kde.expose",
          "when": "view == kdeEnvView && viewItem == environment",
          "group": "inline@4"
        },
        {
          "command": "kde.headlamp",
          "when": "view == kdeEnvView && viewItem == environment",
          "group": "inline@5"
        },
        {
          "command": "kde.createProject",
          "when": "view == kdeEnvView && viewItem == environment",
          "group": "inline@6"
        },
        {
          "command": "kde.project.deploy",
          "when": "view == kdeEnvView && viewItem == project",
          "group": "inline@1"
        },
        {
          "command": "kde.project.undeploy",
          "when": "view == kdeEnvView && viewItem == project",
          "group": "inline@2"
        },
        {
          "command": "kde.project.redeploy",
          "when": "view == kdeEnvView && viewItem == project",
          "group": "inline@3"
        },
        {
          "command": "kde.project.exec-develop-env",
          "when": "view == kdeEnvView && viewItem == project",
          "group": "inline@4"
        },
        {
          "command": "kde.project.exec-deploy-env",
          "when": "view == kdeEnvView && viewItem == project",
          "group": "inline@5"
        },
        {
          "command": "kde.project.telepresenceReplace",
          "when": "view == kdeEnvView && viewItem == project",
          "group": "inline@6"
        },
        {
          "command": "kde.pod.logs",
          "when": "view == kdeEnvView && viewItem == pod",
          "group": "inline@1"
        },
        {
          "command": "kde.pod.portForward",
          "when": "view == kdeEnvView && viewItem == pod",
          "group": "inline@2"
        },
        {
          "command": "kde.pod.exec",
          "when": "view == kdeEnvView && viewItem == pod",
          "group": "inline@3"
        }
      ]
    }
  },
  "scripts": {
    "test": "echo \"No tests\""
  }
}
